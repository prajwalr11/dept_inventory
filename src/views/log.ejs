<%- include('./partials/header') %> 
<%- include('./partials/nav') %> 
          <div class="col-sm-6">
            <h1>Application Log</h1>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Application Log Table</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="log" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th>Date & Time</th>
                      <th>Users</th>
                      <th>Method</th>
                      <th>Endpoint</th>
                      <th>Status Code</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% log.forEach((element, index)=> { %>
                    <tr>
                      <td><%= index+1%></td>
                      <td><%= moment(element.date).locale('en').format('DD-MM-YYYY HH:mm:ss') %></td>
                      <td><%= element.usr %></td>
                      <td><%= element.method %></td>
                      <td><%= element.endpoint %></td>
                      <td><%= element.status_code %></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>

    <!-- Clear Log Modal-->
    <div class="modal fade" id="clearLog">
      <div class="modal-dialog">
        <div class="modal-content">
          <!-- Modal Header-->
          <div class="modal-header">
            <h4 class="modal-title">Clear Log</h4>
            <button type="button" class="close" onclick="$('#clearLog').modal('hide');">&times;</button>
          </div>
          <!-- Modal body-->
          <form action="/log/delete/" method="post">
            <div class="modal-body">
              Are you sure you want to delete all the stored log data?
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Yes</button>
              <button type="button" class="btn btn-secondary" onclick="$('#clearLog').modal('hide');">Cancel</button>
            </div>
          </form>
        </div>
      </div>
    </div>

<%- include('./partials/footer') %> 
